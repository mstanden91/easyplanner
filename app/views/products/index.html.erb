<div class="container">
  <p id="notice"><%= notice %></p>
  <p>
  <h3>Productos de  <%= current_user.email %></h3>
  </p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Foto</th>
        <th>Categoría</th>
        <th>Nombre</th>
        <th>Tiempo</th>
        <th>Max capacidad</th>
        <th>Precio Base</th>
        <th>Adicionales</th>
        <th>id</th>
        
  
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @products.each do |product| %>
        <tr>
           <td><%= image_tag(product.photo, size:"80") %></td>
          <td><% if  product.category_id != nil %>
                <%=  Category.find(product.category_id).name %>
              <% else %>
              <% product.category_id %>
              <% end %>
          <td><%= product.name %></td>
          <td><% if  product.timeservice_id != nil %>
                <%=  Timeservice.find(product.timeservice_id).name %>
         
              <% product.timeservice_id %>
              <% end %>
          </td>
          <td><% if  product.maxcapacity_id != nil %>
                <%=  Maxcapacity.find(product.maxcapacity_id).name %>
              <% else %>
              <% product.maxcapacity_id %>
              <% end %>
  
          <td><%= product.base_price %></td>
          <td><%= product.options_additional %></td> 
           <td><%= product.user_id %></td>
        
          <td>
         <% if product.user_id != nil %>
          <%= link_to 'Show', user_product_path(product.user, product) %>
          <% else %>
          <%= "no" %>
          <% end %>
          </td>
  
          <td>
          <% if product.user_id != nil %>
          <%= link_to 'Editar', edit_user_product_path(product.user, product) %>
          <% else %>
          <%= "no" %>
          <% end %>
          </td>
  
          <td>
          <% if product.user_id != nil %>
          <%= link_to 'Eliminar', user_product_path(product.user, product), method: :delete, data: { confirm: '¿Seguro?' } %>
          <% else %>
          <%= "no" %>
          <% end %>
          </td>
  
  
         
        <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Product', new_user_product_path(current_user) %>

  </div>