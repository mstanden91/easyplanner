
<div class="container">
 <div class="row">
   <div class="col-md-7">
    <div class="col-md-offset-3">

    <div class="titulo">
      <h2>Inicia sesión </h2>
    </div>
    
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email,  class: "form-control",  placeholder: "Ingresa tu correo ",  autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password,  class: "form-control",  placeholder: "Ingresa tu contraseña ", autocomplete: "off" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
      </div>
     </div>
   </div>
</div>
