<div class="paginaRegistro">
  <div class="container">
    <div class="escrito">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="logo">
                
          </div>

           <div class="titulo">
              <h2> ¡No pierdas más tiempo organizando cumpleaños! </h2>
            </div>

             <div class="sub-titulo">
              <h3> Encuentra una gran variedad de proveedores para cumpleaños infantiles  </h3>
            </div>

          <div class="row" class="campos">
            <div class="col-md-10">
              <div class="col-md-offset-3">


          <div class="field">
             <%= f.email_field :email, class: "form-control",  placeholder: "Ingresa tu correo ",  autofocus: true %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off",  class: "form-control",  placeholder: "Ingresa una contraseña " %>
            </div>

          <div class="field">
            <%= f.password_field :password_confirmation,  class: "form-control",  placeholder: "Reingresa tu contraseña ", autocomplete: "off" %>
            <% if @validatable %>
            <em>( Contraseña debe tener <%= @minimum_password_length %> carácteres mínimos)</em>
            <% end %><br />
          </div>

        <div class="actions">
            <%= f.submit "Regístrarse" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>
        </div>
        </div>
    </div>
  </div>

</div>
